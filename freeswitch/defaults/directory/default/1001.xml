<configuration name="xml_curl.conf" description="XML CURL">
  <bindings>
    <!-- Directory queries (users, auth) -->
    <binding name="directory">
      <param name="gateway-url" value="http://pbx_nginx/app/xml_handler.php"/>
      <param name="enable-cacert-check" value="false"/>
      <param name="timeout-ms" value="3000"/>
      <param name="retries" value="1"/>
    </binding>
    <!-- Optional: dialplan, phrases, etc. add later if needed -->
  </bindings>
</configuration>
<?xml version="1.0" encoding="UTF-8"?>
<configuration name="acl.conf" description="ACLs">
  <network-lists>
    <list name="domains" default="deny">
      <node type="allow" domain="$${domain}"/>
      <node type="allow" cidr="127.0.0.1/32"/>
      <node type="allow" cidr="::1/128"/>
    </list>
  </network-lists>
</configuration>
